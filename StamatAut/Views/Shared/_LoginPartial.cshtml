@using Microsoft.AspNet.Identity
<div id="registredMenu">
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <ul id="menu">
                <li>
                    @Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { })
                </li>
                <li>   <a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
            </ul>
        }
    }
    else
    {
        <ul id="menu">
            <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { })</li>
            <li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { })</li>
        </ul>
    }
    </div>
