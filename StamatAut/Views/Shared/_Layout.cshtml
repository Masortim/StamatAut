<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    <link href="@Url.Content("~/Content/Stile.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.json-2.2.min.js")" type="text/javascript"></script>


</head>
<body>
    <div>
        <div id="header-wrapper">
    <div id="header">

        <div id="menucontainer">
            <ul id="menu">
                <li>@Html.ActionLink("СТАМАТ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                <li> @Html.ActionLink("Информация", "About", "Home")</li>
                <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
            </ul>
        </div>

            @Html.Partial("_LoginPartial")

    </div>
</div>

    </div>
        
    <div class="main">
        @RenderBody()
       
    </div>
    <div id="footer-wrapper">
        <div id="footer">
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
